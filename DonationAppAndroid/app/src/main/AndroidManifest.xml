<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.psweeney.donationappandroid">
    android:large
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LandingScreen"
            android:label="@string/app_name" />
        <activity
            android:name=".FeedActivity"
            android:label="@string/feed_title_bar_label" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/search_title_bar_label" />
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/stats_title_bar_label" />
        <activity android:name=".GoalScreen"></activity>
    </application>

</manifest>
