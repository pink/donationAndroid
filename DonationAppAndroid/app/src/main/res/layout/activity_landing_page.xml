<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LandingScreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_weight="0">

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/auto_donate_label"
                android:id="@+id/switchAutoDonate"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:checked="true"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:enabled="true"
                android:trackTint="@color/colorPrimaryDark"
                android:onClick="onClickAutoDonateSwitch" />
        </FrameLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thin_border_width" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:padding="10dp"
            android:onClick="onClickCategoryStatistics">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewStatisticsIcon"
                android:src="@drawable/ic_assessment_white_48dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/category_statistics_button_label"
                android:id="@+id/textViewStatisticsLabel"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewStatisticsChevron"
                android:src="@drawable/ic_chevron_right_white_36dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thin_border_width" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:padding="10dp"
            android:onClick="onClickCategorySearch">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewSearchIcon"
                android:src="@drawable/ic_favorite_border_white_48dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/category_search_button_label"
                android:id="@+id/textViewSearchLabel"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewSearchChevron"
                android:src="@drawable/ic_chevron_right_white_36dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thin_border_width" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:padding="10dp"
            android:onClick="onClickCategoryFeed">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewFeedIcon"
                android:src="@drawable/ic_view_list_white_48dp"
                android:layout_gravity="center_vertical"
                android:tint="@color/colorPrimary"
                android:tintMode="screen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/category_feed_button_label"
                android:id="@+id/textViewFeedLabel"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingRight="20dp"
                android:paddingLeft="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewFeedChevron"
                android:src="@drawable/ic_chevron_right_white_36dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thin_border_width" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:padding="10dp"
            android:measureWithLargestChild="false"
            android:onClick="onClickCategoryAccountSettings">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewAccountSettingsIcon"
                android:src="@drawable/ic_settings_white_48dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/category_account_settings_button_label"
                android:id="@+id/textViewAccountSettingsLabel"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewAccountSettingsChevron"
                android:src="@drawable/ic_chevron_right_white_36dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
